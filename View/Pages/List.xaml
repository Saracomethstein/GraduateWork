                <Button Height="50"
                            Margin="10"
                            Content="lectures #4"
                            FontSize="20"/>

                <Button Height="50"
                            Margin="10"
                            Content="lectures #5"
                            FontSize="20"/>

                <Button Height="50"
                            Margin="10"
                            Content="lectures #6"
                            FontSize="20"/>

                <Button Height="50"
