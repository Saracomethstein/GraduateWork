<Page x:Class="LearnCSharp.View.Pages.Prac1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnCSharp.View.Pages"
      xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Prac1">

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label Content="Задание 1"
                       FontSize="20"
                       FontWeight="Bold"/>

            <TextBlock TextWrapping="Wrap"
                           Margin="10"
                           FontSize="18">
                    
                    <Run>Практическое задание на тему...</Run>
                    <LineBreak/>
                    <LineBreak/>
                    <Run>Сдеать что-то вот такое....</Run>

            </TextBlock>
        </StackPanel>

        
        <StackPanel Grid.Column="1">

            <!--<TextBox Margin="5"
                         TextWrapping="Wrap"
                         TextAlignment="Left"
                         AcceptsReturn="True"
                         FontSize="18"
                         Height="1000">

            </TextBox>-->

            <avalonEdit:TextEditor
				Name="textEditor"
				FontFamily="Consolas"
				FontSize="14pt"
				SyntaxHighlighting="C#"
                Height="1000"
                ShowLineNumbers="True">
            </avalonEdit:TextEditor>

            <Button Content="Отправить решение"
                        Height="30"
                        Margin="0,5,0,0"/>

        </StackPanel>
    </Grid>
</Page>
